{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "nodenext",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "allowJs": false,
    "strict": true,
    "moduleResolution": "nodenext",
    "lib": ["es2017", "dom", "DOM.Iterable"],
    "baseUrl": "src",
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
		"outDir": "dist",
  },
	"files": [
		"file.ts"
	],
  "atom": {
    "rewriteTsconfig": false
  }
}
